  "item": [
    {
      "name": "1. AUTH",
      "item": [
        {
          "name": "1.1 Register Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 201\", () => pm.response.to.have.status(201));"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"Admin ArtStore\",\n  \"email\": \"admin@artstore.tn\",\n  \"motDePasse\": \"Admin123!\",\n  \"role\": \"ADMIN\",\n  \"telephone\": \"55682157\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "1.2 Verify Email Admin (SKIP - Auto verify in DB)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/auth/verify-email?token=YOUR_TOKEN",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "verify-email"],
              "query": [{"key": "token", "value": "YOUR_TOKEN"}]
            }
          }
        },
        {
          "name": "1.3 Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('admin_token', jsonData.token);",
                  "    pm.collectionVariables.set('admin_token', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@artstore.tn\",\n  \"motDePasse\": \"Admin123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "1.4 Register Client",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"Mohamed Ben Ali\",\n  \"email\": \"mohamed@test.com\",\n  \"motDePasse\": \"Test123!\",\n  \"role\": \"CLIENT\",\n  \"telephone\": \"98765432\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "1.5 Login Client",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('client_token', jsonData.token);",
                  "    pm.collectionVariables.set('client_token', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"mohamed@test.com\",\n  \"motDePasse\": \"Test123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
